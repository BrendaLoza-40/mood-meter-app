# MySQL Environment Configuration
# Copy this file to .env and update with your MySQL credentials

# Database Connection
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=mood_meter
DB_PORT=3306

# Server Configuration
PORT=4000
NODE_ENV=development

# API Keys Configuration
# PurpleAir API for air quality data
PURPLEAIR_API_KEY=your_purpleair_api_key_here

# Weather API (if needed)
WEATHER_API_KEY=your_weather_api_key_here

# API Security Settings
API_HOST_RESTRICTION=localhost:3000,localhost:4000
API_REFERER_RESTRICTION=http://localhost:3000/*,http://localhost:4000/*

# Example for remote MySQL (like PlanetScale, AWS RDS, etc.)
# DB_HOST=your-mysql-host.com
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_NAME=mood_meter
# DB_PORT=3306